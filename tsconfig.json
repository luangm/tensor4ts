{
  "compilerOptions": {
    "module": "es6",
    "target": "es5",
    "noImplicitAny": true,
    "outDir": "dist/lib",
    "sourceMap": true,
    "removeComments": true,
    "declaration": true,
    "importHelpers": true,
    "strict": true,
    "moduleResolution": "node",
    "declarationDir": "dist/types",
    "lib": ["DOM","ES6","DOM.Iterable","ScriptHost"]
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "src/**/*"
  ]
}